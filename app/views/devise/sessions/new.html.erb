<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="card p-4" style="width: 22rem;">
    <h3 class="text-center mb-4">Login</h3>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin" }) do |f| %>

      <!-- Email Field -->
      <div class="form-group mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <!-- Password Field -->
      <div class="form-group mb-3">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <!-- Remember Me Field -->
      <div class="form-group form-check mb-3">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, class: "form-check-label" %>
      </div>

      <!-- Submit Button -->
      <div class="form-group">
        <%= f.submit "Login", class: "btn btn-primary w-100" %>
      </div>

    <% end %>

    <!-- Sign-up and Forgot Password Links -->
    <div class="text-center mt-3">
      <%= link_to "Sign up", new_registration_path(resource_name), class: "text-decoration-none" %> |
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-decoration-none" %>
    </div>
  </div>
</div>
