<h1 class="mb-4">Edit Project</h1>

<%= form_with(model: @project, local: true, class: "mb-4") do |form| %>
  <% if @project.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <ul>
        <% @project.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control", rows: 3 %>
  </div>

  <h3>Assign Users:</h3>
  <div class="mb-3">
    <%= form.collection_check_boxes :user_ids, @users, :id, :display_name_with_type do |b| %>
      <div class="form-check">
        <%= b.check_box(class: "form-check-input") %>
        <%= b.label(class: "form-check-label") %>
      </div>
    <% end %>
  </div>

  <div>
    <%= form.submit "Update Project", class: "btn btn-primary" %>
  </div>
<% end %>

<div class="mt-3">
          <%= link_to 'Back', project_path(@project), class: 'btn btn-info' %>
</div>
